<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="66dp"
    android:layout_height="62dp"
    android:elevation="5dp"
    android:layout_margin="1dp"
    android:fadingEdgeLength="20dp"
    android:fadingEdge="horizontal"
    app:cardBackgroundColor="@color/small_label_background_trans_25"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_wind"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:text="Medium Text"
            android:textSize="@dimen/label_font" />


        <ImageView
            android:id="@+id/image_weather"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/cohete_flat" />

        <TextView
            android:id="@+id/txt_temperature"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:gravity="center"
            android:text="Medium Text"
            android:textSize="@dimen/label_font" />


    </LinearLayout>

    <com.littlechoc.cornerlabel.CornerLabel
        android:id="@+id/label_weekday"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tl_background="@color/colorPrimary"
        app:tl_label="Label"
        app:tl_labelSize="8sp"
        app:tl_labelColor="#FFFFFF"
        app:tl_position="topLeft"
        />

</android.support.v7.widget.CardView>